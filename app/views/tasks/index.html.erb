<h1>My tasks</h1>
<h3><%= link_to "Add a new task, broshamus", new_task_path %></h3>
<br>
<ul class="funky">
<% @tasks.each do |task| %>
  <li>
    <h2><%= link_to task.title.capitalize, task %></h2>
    <p>
    <%= task.completed ? "[x] Task is completed" : "[ ] Task is yet to be completed" %>
    </p>
    <h3>
      <strong><%= link_to "DESTRRROOOY IT!!!!", task, method: 'delete', data: { confirm: "Are you totally unequivocally sure broshamus?" } %></strong>
    </h3>
    <br>
<% end %>
  </li>
</ul>

